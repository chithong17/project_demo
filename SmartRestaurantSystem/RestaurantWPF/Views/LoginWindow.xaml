<Window x:Class="RestaurantWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Title="Smart Restaurant - Login"
        Width="900" Height="550"
        Background="#F7F9FC">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- 🌈 Left Panel with Image and Gradient Overlay -->
        <Grid Grid.Column="0">

            <Image Source="/Assets/restaurant-bg.jpg"
           Stretch="UniformToFill"/>

            <Rectangle Opacity="0.4">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#B2EBF2" Offset="0"/>
                        <GradientStop Color="#80DEEA" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>

            <StackPanel VerticalAlignment="Center" Margin="60">
                <TextBlock Text="Fast, Efficient and Productive"
                   FontSize="28"
                   FontWeight="Bold"
                   Foreground="#004D40"
                   TextWrapping="Wrap"
                   Margin="0,0,0,10"/>
                <TextBlock Text="Streamline your restaurant operations..."
                   FontSize="15"
                   Foreground="#004D40"
                   Opacity="0.8"
                   TextWrapping="Wrap"
                   Width="300"/>
            </StackPanel>
        </Grid>

        <!-- 🧱 Right Panel -->
        <Border Grid.Column="1"
                Background="White"
                CornerRadius="12"
                Width="380" Height="400"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Padding="30"
                Effect="{DynamicResource DropShadowEffect}">
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Sign In"
                           FontSize="24"
                           FontWeight="Bold"
                           Foreground="#2C3E50"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,5"/>
                <TextBlock Text="Smart Restaurant System"
                           FontSize="13"
                           Foreground="Gray"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <TextBlock Text="Username" FontSize="13" Foreground="#444"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                         Style="{StaticResource RoundedTextBox}"
                         Margin="0,5,0,15"/>

                <TextBlock Text="Password" FontSize="13" Foreground="#444"/>
                <PasswordBox x:Name="PasswordBox"
                             Style="{StaticResource RoundedPasswordBox}"
                             Margin="0,5,0,20"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <Button Content="Sign In"
                        Command="{Binding LoginCommand}"
                        Style="{StaticResource RoundedButton}"
                        Margin="0,0,0,10"/>

                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="Red"
                           FontSize="12"
                           TextAlignment="Center"
                           Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
