<Window x:Class="RestaurantWPF.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Restaurant - Login"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Width="880" Height="520"
        Background="Transparent"
        FontFamily="Segoe UI">

    <Grid>
        <!-- 🌆 Shadow container -->
        <Border CornerRadius="14" Background="#1C1C1C" SnapsToDevicePixels="True">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="0" BlurRadius="40" Color="#000000" Opacity="0.3"/>
            </Border.Effect>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 🍷 Left Side (Banner - sáng rõ, không làm mờ) -->
            <Grid Grid.Column="0" ClipToBounds="True">
                <Image Source="pack://siteoforigin:,,,/Assets/restaurant_banner2.jpg"
                       Stretch="UniformToFill"/>
            </Grid>

            <!-- ✨ Right Side (Form) -->
            <Grid Grid.Column="1" Background="#121212">
                <Border Background="#1E1E1E"
                        CornerRadius="16"
                        Width="351"
                        Padding="30"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" Height="460">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.25"/>
                    </Border.Effect>

                    <StackPanel VerticalAlignment="Center">

                        <!-- 🧁 Logo -->
                        <Image Source="pack://siteoforigin:,,,/Assets/logo.png"
                               Width="70"
                               Height="70"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,15"/>

                        <TextBlock Text="Welcome Back"
                                   FontSize="22"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   TextAlignment="Center"/>
                        <TextBlock Text="Sign in to continue your session"
                                   FontSize="13"
                                   Foreground="#BFBFBF"
                                   TextAlignment="Center"
                                   Margin="0,0,0,25"/>

                        <!-- 👤 Username -->
                        <TextBlock Text="Username"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#CCCCCC"
                                   Margin="0,5,0,5"/>
                        <Border CornerRadius="8"
                                Background="#2A2A2A"
                                Height="42">
                            <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     Padding="10,0"
                                     Foreground="White"
                                     FontSize="14"
                                     VerticalContentAlignment="Center"
                                     CaretBrush="White"/>
                        </Border>

                        <!-- 🔒 Password -->
                        <TextBlock Text="Password"
                                   FontSize="13"
                                   FontWeight="SemiBold"
                                   Foreground="#CCCCCC"
                                   Margin="0,15,0,5"/>
                        <Border CornerRadius="8"
                                Background="#2A2A2A"
                                Height="42">
                            <PasswordBox x:Name="PasswordBox"
                                         BorderThickness="0"
                                         Background="Transparent"
                                         Padding="10,0"
                                         Foreground="White"
                                         FontSize="14"
                                         VerticalContentAlignment="Center"
                                         PasswordChanged="PasswordBox_PasswordChanged"/>
                        </Border>

                        <!-- ☑ Remember Me -->
                        <CheckBox Content="Remember me"
                                  Margin="0,15,0,10"
                                  Foreground="#BFBFBF"
                                  FontSize="13"/>

                        <!-- 🔘 Login Button -->
                        <Button Content="Sign In"
                                Height="44"
                                FontSize="14"
                                FontWeight="Bold"
                                Foreground="White"
                                BorderThickness="0"
                                Cursor="Hand"
                                Command="{Binding LoginCommand}">
                            <Button.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#FF7A00" Offset="0"/>
                                    <GradientStop Color="#E56A00" Offset="1"/>
                                </LinearGradientBrush>
                            </Button.Background>
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Opacity" Value="0.85"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>

                        <!-- ⚠ Error message -->
                        <TextBlock Text="{Binding ErrorMessage}"
                                   Foreground="#E53935"
                                   FontSize="12"
                                   TextAlignment="Center"
                                   Margin="0,8,0,0"
                                   Height="20"/>

                        <!-- 🧾 Footer -->
                        <TextBlock Text="© 2025 Smart Restaurant"
                                   Foreground="#777"
                                   FontSize="11"
                                   HorizontalAlignment="Center"
                                   Margin="0,20,0,0"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Window>
