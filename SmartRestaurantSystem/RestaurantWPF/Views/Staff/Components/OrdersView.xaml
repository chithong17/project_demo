<UserControl x:Class="RestaurantWPF.Views.Staff.Components.OrdersView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:local="clr-namespace:RestaurantWPF.Converters"
             mc:Ignorable="d">

    <UserControl.Resources>
        <local:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <local:OrderStatusConverter x:Key="OrderStatusConverter"/>
        <local:PreOrderVisibilityConverter x:Key="PreOrderVisibilityConverter"/>
        <QuadraticEase x:Key="EaseOut" EasingMode="EaseOut"/>
    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2.8*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <!-- 🧾 DANH SÁCH ĐƠN HÀNG -->
        <StackPanel>
            <TextBlock Text="📋 Danh sách đơn hàng"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#1B5E20"
                       Margin="0,0,0,10"/>

            <TabControl>
                <!-- Ăn tại chỗ -->
                <TabItem Header="🏠 Ăn tại chỗ">
                    <ListView ItemsSource="{Binding OnsiteOrders}"
                              SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                              Margin="5"
                              BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Mã đơn" Width="80" DisplayMemberBinding="{Binding OrderId}"/>
                                <GridViewColumn Header="Bàn" Width="80" DisplayMemberBinding="{Binding Table.Name}"/>
                                <GridViewColumn Header="Giờ đặt" Width="150" DisplayMemberBinding="{Binding OrderTime, StringFormat={}{0:HH:mm dd/MM}}"/>
                                <GridViewColumn Header="Trạng thái" Width="160">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Status, Converter={StaticResource OrderStatusConverter}}"
                                                       Foreground="#2E7D32"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>

                <!-- Đặt trước -->
                <TabItem Header="📅 Đặt trước">
                    <ListView ItemsSource="{Binding PreOrders}"
                              SelectedItem="{Binding SelectedOrder, Mode=TwoWay}"
                              Margin="5"
                              BorderThickness="0">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Mã đơn" Width="80" DisplayMemberBinding="{Binding OrderId}"/>
                                <GridViewColumn Header="Khách hàng" Width="150" DisplayMemberBinding="{Binding Customer.FullName}"/>
                                <GridViewColumn Header="Giờ đặt" Width="150" DisplayMemberBinding="{Binding OrderTime, StringFormat={}{0:HH:mm dd/MM}}"/>
                                <GridViewColumn Header="Trạng thái" Width="160">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Status, Converter={StaticResource OrderStatusConverter}}"
                                                       Foreground="#2E7D32"
                                                       FontWeight="Bold"
                                                       HorizontalAlignment="Center"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </TabItem>
            </TabControl>
        </StackPanel>

        <!-- 🍽️ PANEL CHI TIẾT -->
        <Border Grid.Column="1"
                Margin="20,0,0,0"
                Background="#FAFAFA"
                Padding="20"
                CornerRadius="10"
                BorderBrush="#C8E6C9"
                BorderThickness="1"
                Visibility="{Binding IsOrderSelected, Converter={StaticResource BoolToVisibilityConverter}}"
                RenderTransformOrigin="1,0.5">

            <Border.RenderTransform>
                <TranslateTransform X="300"/>
            </Border.RenderTransform>

            <Border.Triggers>
                <EventTrigger RoutedEvent="Border.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)"
                                             From="300" To="0"
                                             Duration="0:0:0.35"
                                             EasingFunction="{StaticResource EaseOut}"/>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="0" To="1"
                                             Duration="0:0:0.35"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Border.Triggers>

            <!-- Nội dung chi tiết -->
            <StackPanel>
                <TextBlock Text="🍽️ Chi tiết đơn hàng"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#1B5E20"
                           Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Mã đơn: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedOrder.OrderId}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Khách hàng: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedOrder.Customer.FullName}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Bàn: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedOrder.Table.Name}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                    <TextBlock Text="Giờ đặt: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedOrder.OrderTime, StringFormat={}{0:HH:mm dd/MM/yyyy}}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <TextBlock Text="Trạng thái: " FontWeight="Bold"/>
                    <TextBlock Text="{Binding SelectedOrder.Status, Converter={StaticResource OrderStatusConverter}}"
                               FontWeight="SemiBold"
                               Foreground="#2E7D32"/>
                </StackPanel>

                <Separator Margin="0,5,0,5"/>

                <TextBlock Text="Danh sách món ăn:"
                           FontWeight="SemiBold"
                           Foreground="#2E7D32"
                           Margin="0,0,0,5"/>
                <ItemsControl ItemsSource="{Binding SelectedOrder.OrderDetails}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#FFFFFF"
                                    BorderBrush="#E0E0E0"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Padding="8"
                                    Margin="0,5,0,0">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                                    <TextBlock Text="{Binding Food.Name}" Width="200" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding Quantity}" Width="40" HorizontalAlignment="Right"/>
                                    <TextBlock Text="{Binding UnitPrice, StringFormat={}{0:N0} đ}" Width="100" HorizontalAlignment="Right"/>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <Separator Margin="0,10,0,10"/>

                <!-- ✅ THÊM MÓN ĂN -->
                <TextBlock Text="➕ Thêm món ăn vào đơn:"
                           FontSize="16"
                           FontWeight="Bold"
                           Foreground="#1B5E20"
                           Margin="0,5,0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <ComboBox ItemsSource="{Binding AvailableFoods}"
                              DisplayMemberPath="Name"
                              SelectedItem="{Binding SelectedFood}"
                              Width="220"
                              Margin="0,0,10,0"/>

                    <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}"
                             Width="60"
                             HorizontalContentAlignment="Center"
                             Margin="0,0,10,0"/>

                    <Button Content="Thêm món"
                            Command="{Binding AddFoodCommand}"
                            Background="#81C784"
                            Foreground="White"
                            Width="110"
                            Height="35"/>
                </StackPanel>

                <Separator Margin="0,10,0,10"/>

                <!-- Nút thao tác -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Button Content="Xác nhận"
                            Command="{Binding ConfirmPreOrderCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Background="#FBC02D"
                            Foreground="White"
                            Width="100" Height="35" Margin="5"
                            Visibility="{Binding SelectedOrder.Status, Converter={StaticResource PreOrderVisibilityConverter}}"/>

                    <Button Content="Phục vụ"
                            Command="{Binding ServeCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Background="#81C784"
                            Foreground="White"
                            Width="100" Height="35" Margin="5"/>

                    <Button Content="Hoàn tất"
                            Command="{Binding CompleteCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Background="#4CAF50"
                            Foreground="White"
                            Width="100" Height="35" Margin="5"/>

                    <Button Content="Hủy đơn"
                            Command="{Binding CancelCommand}"
                            CommandParameter="{Binding SelectedOrder}"
                            Background="#E53935"
                            Foreground="White"
                            Width="100" Height="35" Margin="5"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
