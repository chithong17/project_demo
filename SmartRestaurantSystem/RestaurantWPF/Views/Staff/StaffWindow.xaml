<Window x:Class="RestaurantWPF.Views.Staff.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Smart Restaurant - Staff Panel"
        xmlns:vm="clr-namespace:RestaurantWPF.ViewModels.Staff"
        xmlns:views="clr-namespace:RestaurantWPF.Views.Staff.Components"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#F1F8E9">

    <Window.Resources>
        <DataTemplate DataType="{x:Type vm:OrdersViewModel}">
            <views:OrdersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReservationViewModel}">
            <views:ReservationView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TablesViewModel}">
            <views:TablesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PaymentViewModel}">
            <views:PaymentView/>
        </DataTemplate>
    </Window.Resources>
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 💚 Sidebar -->
        <Border Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#C8E6C9" Offset="0"/>
                    <GradientStop Color="#81C784" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel Margin="25,60,25,0">
                <TextBlock Text="Smart Restaurant"
                           Foreground="#1B5E20"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,50"/>

                <Button Content="🧾  Orders"
                        FontSize="16"
                        Background="Transparent"
                        Foreground="#1B5E20"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0,8"
                        Cursor="Hand"
                        Command="{Binding OrdersCommand}"
                        HorizontalContentAlignment="Left"/>

                <Button Content="🪑  Tables"
                        FontSize="16"
                        Background="Transparent"
                        Foreground="#1B5E20"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0,8"
                        Cursor="Hand"
                        Command="{Binding TablesCommand}"
                        HorizontalContentAlignment="Left"/>

                <Button Content="💰  Payments"
                        FontSize="16"
                        Background="Transparent"
                        Foreground="#1B5E20"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0,8"
                        Cursor="Hand"
                        Command="{Binding PaymentsCommand}"
                        HorizontalContentAlignment="Left"/>

                <Button Content="📅  Reservations"
                        FontSize="16"
                        Background="Transparent"
                        Foreground="#1B5E20"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0,8"
                        Cursor="Hand"
                        Command="{Binding ReservationsCommand}"
                        HorizontalContentAlignment="Left"/>

                <!-- 🔘 Logout -->
                <Button Content="🚪  Logout"
        Command="{Binding LogoutCommand}"
        Background="#388E3C"
        Foreground="White"
        BorderThickness="0"
        FontWeight="Bold"
        Margin="0,30,0,0"
        Height="35"
        Cursor="Hand"
        HorizontalContentAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="6" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>

        <!-- 🟩 Header -->
        <Border Grid.Column="1"
                Background="White"
                Height="70"
                VerticalAlignment="Top"
                Margin="0,0,0,1"
                Padding="20,0">
            <DockPanel LastChildFill="False">
                <TextBlock Text="{Binding Greeting}"
           FontSize="20"
           FontWeight="Bold"
           Foreground="#2E7D32"
           VerticalAlignment="Center"
           DockPanel.Dock="Left"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Ellipse Width="42" Height="42" Fill="#66BB6A"/>
                    <TextBlock Text="{Binding StaffName}"
           Margin="10,0,0,0"
           VerticalAlignment="Center"
           Foreground="#2E7D32"
           FontWeight="Medium"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 🧩 Content -->
        <Border Grid.Column="1" Grid.Row="1" Margin="25"
        Background="White" CornerRadius="10" Padding="30">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>

    </Grid>
</Window>
