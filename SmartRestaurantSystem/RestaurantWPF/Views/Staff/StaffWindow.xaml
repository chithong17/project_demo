<Window x:Class="RestaurantWPF.Views.Staff.StaffWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RestaurantWPF.ViewModels.Staff"
        xmlns:views="clr-namespace:RestaurantWPF.Views.Staff.Components"
        Title="Smart Restaurant - Staff Panel"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Background="#F2F3F5"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- View templates -->
        <DataTemplate DataType="{x:Type vm:OrdersViewModel}">
            <views:OrdersView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:ReservationViewModel}">
            <views:ReservationView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:TablesViewModel}">
            <views:TablesView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PaymentViewModel}">
            <views:PaymentView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type vm:PosViewModel}">
            <views:PosView/>
        </DataTemplate>


        <!-- 🎨 Theme Colors -->
        <SolidColorBrush x:Key="AccentBrush" Color="#FF9E40"/>
        <SolidColorBrush x:Key="SidebarBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="CardBorder" Color="#E1E1E1"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#222222"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#555555"/>
        <SolidColorBrush x:Key="TextMuted" Color="#888888"/>

        <!-- 🌫️ Shadow -->
        <DropShadowEffect x:Key="SoftShadow"
                          BlurRadius="18"
                          ShadowDepth="1"
                          Opacity="0.12"
                          Color="Black"/>

        <!-- 🧭 Sidebar button style -->
        <Style x:Key="NavButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="#E0E0E0"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="Background" Value="#2A2A2A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🚪 Logout button -->
        <Style x:Key="LogoutButtonStyle" TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="17"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Margin" Value="0,40,0,0"/>
        </Style>
    </Window.Resources>

    <!-- ⚙️ Layout -->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="270"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 🍫 Sidebar -->
        <Border Background="{StaticResource SidebarBackground}"
                Padding="24,40"
                CornerRadius="0,12,12,0">
            <StackPanel>
                <TextBlock Text="Smart Restaurant"
                           FontSize="22"
                           FontWeight="ExtraBold"
                           Foreground="{StaticResource AccentBrush}"
                           Margin="0,0,0,35"/>
                <Button Content="🧮  POS"
                        Command="{Binding PosCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Content="🧾  Orders"
                        Command="{Binding OrdersCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Content="🍽️  Tables"
                        Command="{Binding TablesCommand}"
                        Style="{StaticResource NavButtonStyle}"/>
                <Button Content="💵  Payments"
        Command="{Binding PaymentsCommand}"
        Style="{StaticResource NavButtonStyle}"/>

                <Button Content="📅  Reservations"
                        Command="{Binding ReservationsCommand}"
                        Style="{StaticResource NavButtonStyle}"/>

                <Separator Margin="0,30,0,20" Background="#333"/>

                <Button Content="🚪  Logout"
                        Command="{Binding LogoutCommand}"
                        Style="{StaticResource LogoutButtonStyle}"/>
            </StackPanel>
        </Border>

        <!-- 🌆 Header + Main content -->
        <Grid Grid.Column="1" Margin="10,0,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <DockPanel Grid.Row="0" Margin="0,0,0,5">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="Welcome back,"
                               Foreground="{StaticResource TextSecondary}"
                               FontSize="17"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding StaffName}"
                               Foreground="{StaticResource TextPrimary}"
                               FontSize="21"
                               FontWeight="Bold"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <Ellipse Width="44"
                         Height="44"
                         Fill="{StaticResource AccentBrush}"
                         DockPanel.Dock="Right"/>
            </DockPanel>

            <!-- Main Content -->
            <Border Grid.Row="1"
                    Background="{StaticResource CardBackground}"
                    CornerRadius="12"
                    Padding="25"
                    BorderBrush="{StaticResource CardBorder}"
                    BorderThickness="1"
                    Effect="{StaticResource SoftShadow}"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Margin="0,0,0,0">
                <ContentControl Content="{Binding CurrentView}"
                                VerticalAlignment="Stretch"
                                HorizontalAlignment="Stretch"/>
            </Border>
        </Grid>
    </Grid>
</Window>
