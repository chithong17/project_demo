<Window x:Class="RestaurantWPF.Views.Admin.Dialogs.TableDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="{Binding DialogTitle}"
        Height="300" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBlock Text="Table Name:" FontWeight="Bold"/>
            <TextBox Text="{Binding CurrentTable.Name}" Margin="0,5,0,10"/>

            <TextBlock Text="Capacity:" FontWeight="Bold"/>
            <TextBox Text="{Binding CurrentTable.Capacity}" Margin="0,5,0,10"/>

            <TextBlock Text="Location:" FontWeight="Bold"/>
            <TextBox Text="{Binding CurrentTable.Location}" Margin="0,5,0,10"/>

            <TextBlock Text="Status (0=Available, 1=Occupied, 2=Reserved):" FontWeight="Bold"/>
            <TextBox Text="{Binding CurrentTable.Status}" Margin="0,5,0,10"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="Save" Command="{Binding SaveCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Margin="5"/>
            <Button Content="Cancel" Command="{Binding CancelCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
