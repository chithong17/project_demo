<Window x:Class="RestaurantWPF.Views.Admin.Dialogs.UserDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Dialog"
        Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        Background="#FAFAFA">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Margin="10">
            <TextBlock Text="{Binding DialogTitle}"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#2C3E50"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Username:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding CurrentUser.Username}" Margin="0,5,0,10"/>

            <TextBlock Text="Full Name:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding CurrentUser.FullName}" Margin="0,5,0,10"/>

            <TextBlock Text="Email:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding CurrentUser.Email}" Margin="0,5,0,10"/>

            <TextBlock Text="Phone:" FontWeight="SemiBold"/>
            <TextBox Text="{Binding CurrentUser.Phone}" Margin="0,5,0,10"/>

            <TextBlock Text="Role:" FontWeight="SemiBold"/>
            <ComboBox ItemsSource="{Binding Roles}"
                      SelectedItem="{Binding CurrentUser.Role}"
                      DisplayMemberPath="Name"
                      Margin="0,5,0,10"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="💾 Save"
                    Command="{Binding SaveCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Background="#27AE60" Foreground="White"
                    Width="100" Margin="10,0"/>
            <Button Content="❌ Cancel"
                    Command="{Binding CancelCommand}"
                    CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                    Background="#C0392B" Foreground="White"
                    Width="100" Margin="10,0"/>
        </StackPanel>
    </Grid>
</Window>
