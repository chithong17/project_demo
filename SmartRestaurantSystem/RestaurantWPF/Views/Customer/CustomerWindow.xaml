<Window x:Class="RestaurantWPF.Views.Customer.CustomerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:RestaurantWPF.ViewModels.Customer"
        xmlns:cviews="clr-namespace:RestaurantWPF.Views.Customer.Components"
        Title="Smart Restaurant - Customer Portal"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        WindowStyle="SingleBorderWindow"
        ResizeMode="CanResize"
        Background="#FFFDE7">

    <Window.Resources>

        <DataTemplate DataType="{x:Type vm:MenuViewModel}">
            <cviews:MenuView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ReservationViewModel}">
            <cviews:ReservationView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:FeedbackViewModel}">
            <cviews:FeedbackView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type vm:ProfileViewModel}">
            <cviews:ProfileView/>
        </DataTemplate>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🍽️ Sidebar -->
        <Border Grid.RowSpan="2">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#FFF9C4" Offset="0"/>
                    <GradientStop Color="#FFD54F" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>

            <StackPanel Margin="25,60,25,0">
                <TextBlock Text="Smart Restaurant"
                           Foreground="#5D4037"
                           FontSize="22"
                           FontWeight="Bold"
                           Margin="0,0,0,50"/>

                <Button Content="🍴  Menu"
                        FontSize="16"
                        Background="Transparent"
                        Foreground="#5D4037"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0,8"
                        Cursor="Hand"
                        Command="{Binding MenuCommand}"
                        HorizontalContentAlignment="Left"/>

                <Button Content="🪑  Reservations"
                        FontSize="16"
                        Background="Transparent"
                        Foreground="#5D4037"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0,8"
                        Cursor="Hand"
                        Command="{Binding ReservationCommand}"
                        HorizontalContentAlignment="Left"/>

                <Button Content="💬  Feedback"
                        FontSize="16"
                        Background="Transparent"
                        Foreground="#5D4037"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0,8"
                        Cursor="Hand"
                        Command="{Binding FeedbackCommand}"
                        HorizontalContentAlignment="Left"/>

                <Button Content="👤  Profile"
                        FontSize="16"
                        Background="Transparent"
                        Foreground="#5D4037"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0,8"
                        Cursor="Hand"
                        Command="{Binding ProfileCommand}"
                        HorizontalContentAlignment="Left"/>

                <!-- 🔘 Logout -->
                <Button Content="🚪  Logout"
        Command="{Binding LogoutCommand}"
        Background="#FFA000"
        Foreground="White"
        FontSize="15"
        BorderThickness="0"
        FontWeight="Bold"
        Margin="0,60,0,0"
        Height="40"
        Cursor="Hand"
        HorizontalContentAlignment="Center">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border CornerRadius="8" Background="{TemplateBinding Background}">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

            </StackPanel>
        </Border>

        <!-- 🟡 Header -->
        <Border Grid.Column="1"
                Background="White"
                Height="70"
                VerticalAlignment="Top"
                Margin="0,0,0,1"
                Padding="20,0">
            <DockPanel LastChildFill="False">
                <TextBlock Text="{Binding Greeting}"
               FontSize="24"
               FontWeight="Bold"
               Foreground="#4E342E"
               VerticalAlignment="Center"
               DockPanel.Dock="Left"/>  


                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <Ellipse Width="42" Height="42" Fill="#FFB300"/>
                    <TextBlock Text="{Binding CustomerName}"
           Margin="12,0,0,0"
           FontSize="16"
           VerticalAlignment="Center"
           Foreground="#4E342E"
           FontWeight="Medium"/>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 🧩 Content -->
        <Border Grid.Column="1" Grid.Row="1" Margin="25"
        Background="White" CornerRadius="10" Padding="20">
            <ContentControl Content="{Binding CurrentView}" />
        </Border>

    </Grid>
</Window>
