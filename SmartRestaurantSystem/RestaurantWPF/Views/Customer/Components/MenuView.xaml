<UserControl x:Class="RestaurantWPF.Views.Customer.Components.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:conv="clr-namespace:RestaurantWPF.Converters"
             mc:Ignorable="d"
             FontFamily="Segoe UI"
             Background="#121212">
    <UserControl.Resources>
        <conv:BoolToVisibilityInverseConverter x:Key="BoolToVisibilityInverseConverter"/>

        <!-- ☁️ Shadow -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="20"
                          ShadowDepth="2"
                          Opacity="0.25"
                          Color="Black"/>

        <!-- 🎨 Theme colors -->
        <SolidColorBrush x:Key="AccentBrush" Color="#FF7A00"/>
        <SolidColorBrush x:Key="CardBackground" Color="#1E1E1E"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#BFBFBF"/>
        <SolidColorBrush x:Key="BorderLight" Color="#2A2A2A"/>
        <SolidColorBrush x:Key="InputBackground" Color="#1A1A1A"/>
        <SolidColorBrush x:Key="InputBackgroundHover" Color="#2A2A2A"/>

        <!-- 🔍 SearchBox -->
        <Style x:Key="SearchTextBoxStyle" TargetType="TextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="#2A2A2A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="36,8,10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <Border Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="8">
                                <ScrollViewer x:Name="PART_ContentHost"
                                              Padding="{TemplateBinding Padding}"/>
                            </Border>
                            <TextBlock Text="🔍"
                                       FontSize="16"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="10,0,0,0"
                                       Foreground="#777"/>
                            <TextBlock Text="Search dishes..."
                                       FontSize="14"
                                       Foreground="#777"
                                       VerticalAlignment="Center"
                                       HorizontalAlignment="Left"
                                       Margin="36,0,0,0"
                                       IsHitTestVisible="False">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Visibility" Value="Collapsed"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}" Value="">
                                                <Setter Property="Visibility" Value="Visible"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 🧡 Add Button -->
        <Style x:Key="AddButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="10,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#FF8C1A"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E56A00"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- CATEGORY BUTTON (NEW) -->
        <Style x:Key="FilterCategoryStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#252525"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="8"
                        Padding="{TemplateBinding Padding}">

                            <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center" />
                        </Border>

                        <ControlTemplate.Triggers>

                            <!-- HOVER -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#333333"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>

                            <!-- SELECTED -->
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="border" Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="14"
                                                  ShadowDepth="0"
                                                  Color="#FF7A00"
                                                  Opacity="0.55"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="RefreshButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="14,6"/>
            <Setter Property="Margin" Value="10,0,0,0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderLight}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>

            <!-- ❌ KHÔNG ĐƯỢC: Button không có CornerRadius
    <Setter Property="CornerRadius" Value="8"/>
    -->

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">

                        <Grid>
                            <!-- ✔ CornerRadius để trong Border -->
                            <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="8">

                                <StackPanel Orientation="Horizontal"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <TextBlock Text="↻"
                                       Margin="0,0,6,0"
                                       FontSize="16"
                                       VerticalAlignment="Center"/>

                                    <ContentPresenter VerticalAlignment="Center"/>
                                </StackPanel>

                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>

                            <!-- Hover -->
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                            </Trigger>

                            <!-- Click effect -->
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#292929"/>
                                <Setter Property="Foreground" Value="{StaticResource AccentBrush}"/>
                            </Trigger>

                        </ControlTemplate.Triggers>

                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>

    <!-- 🧩 Layout -->
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 🧁 Header -->
        <Border Grid.Row="0"
                Background="#1E1E1E"
                CornerRadius="10"
                Margin="0,0,0,20"
                Padding="15"
                Effect="{StaticResource CardShadow}">
            <DockPanel>
                <TextBlock Text="🍽️  Today’s Menu"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="{StaticResource TextPrimary}"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"/>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                    <TextBox Width="220"
                             Margin="0,0,8,0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource SearchTextBoxStyle}"/>

                    <ListBox ItemsSource="{Binding Categories}"
         SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
         
         DisplayMemberPath="Name"
         Background="Transparent"
         BorderThickness="0"
         ItemContainerStyle="{StaticResource FilterCategoryStyle}"
         VerticalAlignment="Center">

                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <StackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>

                    </ListBox>


                    <Button Content="Refresh"
        Width="120"
        Style="{StaticResource RefreshButtonStyle}"
        Command="{Binding RefreshCommand }" />

                </StackPanel>
            </DockPanel>
        </Border>

        <!-- 📜 ScrollViewer -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>

                <!-- 🖼️ Banner (Full image) -->
                <Border Margin="0,0,0,20"
                        CornerRadius="12"
                        ClipToBounds="True"
                        Background="#2A2A2A"
                        Effect="{StaticResource CardShadow}">
                    <Image Source="pack://siteoforigin:,,,/Assets/restaurant_banner.jpg"
                           Stretch="Uniform"
                           VerticalAlignment="Top"
                           HorizontalAlignment="Center"/>
                </Border>

                <!-- 🍛 Food List -->
                <ItemsControl ItemsSource="{Binding Foods}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="4" Margin="0,0,0,20"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>

                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Height="Auto"
                                    Margin="12"
                                    CornerRadius="16"
                                    Background="{StaticResource CardBackground}"
                                    BorderBrush="#2A2A2A"
                                    BorderThickness="1"
                                    Effect="{StaticResource CardShadow}">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="200"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- 🖼 Food Image -->
                                    <Border Grid.Row="0" CornerRadius="16,16,0,0" ClipToBounds="True">
                                        <Grid>
                                            <Image Source="{Binding ImageUrl}" Stretch="UniformToFill"/>
                                            <Rectangle>
                                                <Rectangle.Fill>
                                                    <LinearGradientBrush StartPoint="0,0.4" EndPoint="0,1">
                                                        <GradientStop Color="#00000000" Offset="0"/>
                                                        <GradientStop Color="#CC000000" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Rectangle.Fill>
                                            </Rectangle>

                                            <!-- Overlay nếu hết hàng -->
                                            <Grid Background="#AA000000"
                                                  Visibility="{Binding IsAvailable, Converter={StaticResource BoolToVisibilityInverseConverter}}">
                                                <TextBlock Text="Unavailable"
                                                           Foreground="White"
                                                           FontSize="18"
                                                           FontWeight="Bold"
                                                           VerticalAlignment="Center"
                                                           HorizontalAlignment="Center"/>
                                            </Grid>

                                            <!-- Tên món -->
                                            <StackPanel VerticalAlignment="Bottom" Margin="10,0,10,10">
                                                <TextBlock Text="{Binding Name}"
                                                           FontWeight="Bold"
                                                           FontSize="16"
                                                           Foreground="White"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Text="{Binding PopularityScore, StringFormat='🔥'}"
                                                           FontSize="11"
                                                           Foreground="#FFB266"
                                                           Margin="0,2,0,0"/>
                                            </StackPanel>
                                        </Grid>
                                    </Border>

                                    <!-- 📄 Info -->
                                    <StackPanel Grid.Row="1" Margin="15,10,15,8">
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="13"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   TextWrapping="Wrap"
                                                   MaxHeight="38"/>
                                        <TextBlock Text="{Binding Category.Name, StringFormat='🍴 {0}'}"
                                                   FontSize="11"
                                                   Foreground="#999"
                                                   Margin="0,3,0,10"/>

                                        <!-- Giá + Nút -->
                                        <DockPanel LastChildFill="False" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Price, StringFormat='{}{0:N0} VND'}"
                                                       FontWeight="Bold"
                                                       Foreground="{StaticResource TextPrimary}"
                                                       FontSize="15"
                                                       VerticalAlignment="Center"
                                                       DockPanel.Dock="Left"
                                                       Margin="0,0,6,0"/>

                                            <Button Command="{Binding DataContext.AddToCartCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"
                                                    Style="{StaticResource AddButtonStyle}"
                                                    IsEnabled="{Binding IsAvailable}"
                                                    VerticalAlignment="Center"
                                                    MinWidth="80">
                                                <TextBlock Text="🛒 Add" FontSize="14" VerticalAlignment="Center"/>
                                            </Button>
                                        </DockPanel>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>
        </ScrollViewer>

        <!-- 🧺 Floating Cart -->
        <Canvas>
            <Border Width="68" Height="68"
                    CornerRadius="34"
                    Cursor="Hand"
                    MouseLeftButtonUp="CartIcon_Click"
                    Canvas.Right="25"
                    Canvas.Bottom="25"
                    Effect="{StaticResource CardShadow}">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FF7A00" Offset="0"/>
                        <GradientStop Color="#E56A00" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Grid>
                    <TextBlock Text="🛒" FontSize="28"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                    <Border Background="#D32F2F"
                            CornerRadius="10"
                            MinWidth="22"
                            Height="22"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Margin="0,-5,-6,0">
                        <TextBlock Text="{Binding CartCount}"
                                   Foreground="White"
                                   FontSize="12"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </Grid>
            </Border>
        </Canvas>
    </Grid>
</UserControl>
