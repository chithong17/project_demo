<UserControl x:Class="RestaurantWPF.Views.Customer.Components.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid Margin="30">
            <Border Background="#FFF8E1" Padding="25" CornerRadius="12" BorderBrush="#FFD54F" BorderThickness="1">
                <StackPanel HorizontalAlignment="Center" Width="420">

                    <!-- Header -->
                    <TextBlock Text="👤 Hồ sơ cá nhân"
                               FontSize="24"
                               FontWeight="Bold"
                               Foreground="#4E342E"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>

                    <!-- Avatar (bo tròn + chọn ảnh) -->
                    <Grid HorizontalAlignment="Center" Margin="0,0,0,10">
                        <Grid.Effect>
                            <DropShadowEffect Color="#88000000"
                                              BlurRadius="10"
                                              ShadowDepth="3"
                                              Opacity="0.4"/>
                        </Grid.Effect>

                        <Ellipse Width="130" Height="130"
                                 Stroke="#FFA000"
                                 StrokeThickness="3">
                            <Ellipse.Fill>
                                <ImageBrush ImageSource="{Binding AvatarUrl}" Stretch="UniformToFill"/>
                            </Ellipse.Fill>
                        </Ellipse>
                    </Grid>

                    <!-- Nút chọn ảnh -->
                    <Button Content="📁 Chọn ảnh đại diện"
                            Command="{Binding SelectAvatarCommand}"
                            Background="#FFD54F"
                            Foreground="#4E342E"
                            FontWeight="SemiBold"
                            Width="200"
                            Height="36"
                            HorizontalAlignment="Center"
                            Margin="0,5,0,15"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <!-- Stats -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                        <Border Background="#FFE082" Padding="10,5" CornerRadius="8" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="{Binding ReservationCount}" 
                                           FontSize="18" FontWeight="Bold" 
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Lượt đặt bàn" 
                                           FontSize="12" Foreground="#5D4037" 
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>

                        <Border Background="#FFECB3" Padding="10,5" CornerRadius="8" Margin="5,0">
                            <StackPanel>
                                <TextBlock Text="{Binding FeedbackCount}" 
                                           FontSize="18" FontWeight="Bold"
                                           HorizontalAlignment="Center"/>
                                <TextBlock Text="Đánh giá" 
                                           FontSize="12" Foreground="#5D4037"
                                           HorizontalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>

                    <!-- Editable fields -->
                    <TextBlock Text="Họ và tên:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding FullName}" Height="30" Margin="0,0,0,10"/>

                    <TextBlock Text="Số điện thoại:" FontWeight="SemiBold" Margin="0,5,0,2"/>
                    <TextBox Text="{Binding Phone}" Height="30" Margin="0,0,0,15"/>

                    <!-- Save button -->
                    <Button Content="💾 Lưu thay đổi"
                            Command="{Binding SaveCommand}"
                            Background="#FFA000"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="180"
                            Height="40"
                            HorizontalAlignment="Center"
                            Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </ScrollViewer>
</UserControl>
