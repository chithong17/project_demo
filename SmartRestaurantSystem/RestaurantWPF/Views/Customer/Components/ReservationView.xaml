<UserControl x:Class="RestaurantWPF.Views.Customer.Components.ReservationView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="900">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <!-- 🪑 Tiêu đề -->
            <TextBlock Text="🪑 Đặt bàn"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#4E342E"
                       Margin="0,0,0,15"/>

            <!-- 📋 Form đặt bàn -->
            <Border Background="#FFF8E1"
                    Padding="20"
                    CornerRadius="10"
                    BorderBrush="#FFD54F"
                    BorderThickness="1">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="130"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ⏰ Thời gian -->
                    <TextBlock Text="🕒 Thời gian:"
                               Grid.Row="0" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="0" Grid.Column="1"
                                Margin="0,0,0,10">
                        <DatePicker SelectedDate="{Binding StartTime}" Width="160"/>
                        <TextBlock Text="Giờ:" VerticalAlignment="Center" Margin="10,0,5,0"/>
                        <TextBox Text="{Binding StartTime, StringFormat='{}{0:HH:mm}'}"
                                 Width="60" VerticalContentAlignment="Center"/>
                    </StackPanel>

                    <!-- 👥 Số người -->
                    <TextBlock Text="👥 Số người:"
                               Grid.Row="1" Grid.Column="0"
                               VerticalAlignment="Center" Margin="0,0,10,10"/>
                    <TextBox Text="{Binding NumberOfPeople, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True, ValidatesOnExceptions=True}"
         Grid.Row="1" Grid.Column="1"
         Width="80" Margin="0,0,0,10"
         VerticalContentAlignment="Center"/>


                    <!-- 📝 Ghi chú -->
                    <TextBlock Text="📝 Ghi chú:"
                               Grid.Row="2" Grid.Column="0"
                               VerticalAlignment="Top" Margin="0,0,10,10"/>
                    <TextBox Text="{Binding Note}"
                             Grid.Row="2" Grid.Column="1"
                             AcceptsReturn="True"
                             Height="60"
                             TextWrapping="Wrap"
                             Margin="0,0,0,10"/>

                    <!-- 🔘 Nút đặt bàn -->
                    <Button Content="Đặt bàn"
                            Grid.Row="3" Grid.ColumnSpan="2"
                            Command="{Binding ReserveCommand}"
                            Background="#FFA000"
                            Foreground="White"
                            FontWeight="Bold"
                            Width="120" Height="36"
                            HorizontalAlignment="Left"
                            Cursor="Hand"
                            Margin="0,10,0,0">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}"
                                        CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center"
                                                      VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
            </Border>

            <!-- 📅 Lịch sử đặt bàn -->
            <TextBlock Text="📅 Lịch sử đặt bàn"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Foreground="#4E342E"
                       Margin="0,25,0,10"/>

            <!-- 🧾 DataGrid hiển thị danh sách -->
            <DataGrid ItemsSource="{Binding Reservations}"
                      AutoGenerateColumns="False"
                      Height="300"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      RowBackground="White"
                      AlternatingRowBackground="#FFFDE7"
                      BorderBrush="#FFECB3"
                      BorderThickness="1"
                      FontSize="13">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="Thời gian"
                                        Binding="{Binding StartTime, StringFormat={}{0:dd/MM/yyyy HH:mm}}"
                                        Width="180"/>

                    <DataGridTextColumn Header="Số người"
                                        Binding="{Binding NumberOfPeople}"
                                        Width="100"/>

                    <DataGridTextColumn Header="Ghi chú"
                                        Binding="{Binding Note}"
                                        Width="*"/>

                    <DataGridTextColumn Header="Trạng thái"
                                        Binding="{Binding Status}"
                                        Width="120"/>

                    <!-- ✏️❌ Cột hành động -->
                    <DataGridTemplateColumn Header="Hành động" Width="150">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                    <Button Content="✏️"
                                            Width="40" Height="26" Margin="3,0"
                                            Command="{Binding DataContext.EditReservationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                    <Button Content="❌"
                                            Width="40" Height="26" Margin="3,0"
                                            Background="#E53935" Foreground="White"
                                            Command="{Binding DataContext.DeleteReservationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                            CommandParameter="{Binding}"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </ScrollViewer>
</UserControl>
