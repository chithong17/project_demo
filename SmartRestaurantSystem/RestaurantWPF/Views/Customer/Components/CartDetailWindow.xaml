<Window x:Class="RestaurantWPF.Views.Customer.Components.CartDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giỏ hàng của bạn"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Width="480" Height="560"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None">

    <Border CornerRadius="16" Background="White" Padding="25" Margin="10">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.3" />
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 🔹 Header -->
            <DockPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="🛍️ Giỏ hàng của bạn"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#4E342E"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"/>
                <Button Content="✖"
                        Width="32" Height="32"
                        Background="Transparent"
                        Foreground="#757575"
                        FontWeight="Bold"
                        FontSize="16"
                        BorderThickness="0"
                        Cursor="Hand"
                        Click="Close_Click"
                        DockPanel.Dock="Right"/>
            </DockPanel>

            <!-- 🔹 Danh sách món -->
            <Border Grid.Row="1" CornerRadius="10" BorderBrush="#EEE" BorderThickness="1" Background="#FFFDF5">
                <ListView ItemsSource="{Binding CartItems}" Height="340" BorderThickness="0">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <DockPanel Margin="0,6" LastChildFill="False">
                                <!-- Tên món -->
                                <TextBlock Text="{Binding Name}"
                           FontWeight="Bold"
                           FontSize="14"
                           Width="150"
                           VerticalAlignment="Center"/>

                                <!-- Giá -->
                                <TextBlock Text="{Binding Total, StringFormat={}{0:N0}₫}"
                           Foreground="#E65100"
                           Width="70"
                           HorizontalAlignment="Right"
                           VerticalAlignment="Center"/>

                                <!-- Điều khiển số lượng -->
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0,0,0">
                                    <Button Content="−"
                            Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Width="24" Height="24" FontWeight="Bold"
                            Background="#FFE082" BorderThickness="0"/>

                                    <TextBlock Text="{Binding Quantity}"
                               Width="30"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontWeight="Bold"
                               TextAlignment="Center"/>

                                    <Button Content="+"
                            Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                            CommandParameter="{Binding}"
                            Width="24" Height="24" FontWeight="Bold"
                            Background="#81C784" BorderThickness="0"/>
                                </StackPanel>

                                <!-- Nút xóa -->
                                <Button Content="🗑️"
                        Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                        CommandParameter="{Binding}"
                        Background="Transparent"
                        BorderThickness="0"
                        Foreground="Red"
                        FontSize="14"
                        Margin="6,0,0,0"
                        ToolTip="Xóa món"/>
                            </DockPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </Border>

            <!-- 🔹 Tổng cộng + Nút -->
            <StackPanel Grid.Row="2" Margin="0,20,0,0">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,0,10">
                    <TextBlock Text="Tổng cộng:" FontSize="16" Foreground="#4E342E" VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0} VND}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#E65100"
                               Margin="6,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Đóng"
                            Width="90" Height="36"
                            Background="#BDBDBD"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            Click="Close_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Đặt món"
                            Width="120" Height="36"
                            Background="#FFA000"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Order_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
