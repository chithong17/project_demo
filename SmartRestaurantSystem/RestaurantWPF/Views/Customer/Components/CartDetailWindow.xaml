<Window x:Class="RestaurantWPF.Views.Customer.Components.CartDetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Giỏ hàng của bạn"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Width="520" Height="600"
        Background="Transparent"
        AllowsTransparency="True"
        WindowStyle="None"
        FontFamily="Segoe UI">

    <Border CornerRadius="16"
            Background="#1A1A1A"
            Padding="25"
            Margin="10"
            BorderBrush="#2A2A2A"
            BorderThickness="1">
        <Border.Effect>
            <DropShadowEffect BlurRadius="20" ShadowDepth="0" Opacity="0.4" Color="#000000"/>
        </Border.Effect>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 🧾 Header -->
            <DockPanel Grid.Row="0" Margin="0,0,0,15">
                <TextBlock Text="🛍️ Giỏ hàng của bạn"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF7A00"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"/>

                <Button Content="✖"
                        Width="32" Height="32"
                        Background="Transparent"
                        Foreground="#999"
                        FontWeight="Bold"
                        FontSize="16"
                        BorderThickness="0"
                        Cursor="Hand"
                        DockPanel.Dock="Right"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="#FF7A00"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </DockPanel>

            <!-- 🥘 Danh sách món -->
            <Border Grid.Row="1"
                    CornerRadius="10"
                    BorderBrush="#2E2E2E"
                    BorderThickness="1"
                    Background="#181818"
                    Padding="10">
                <ListView ItemsSource="{Binding CartItems}"
                          BorderThickness="0"
                          Foreground="White"
                          Background="Transparent"
                          ScrollViewer.VerticalScrollBarVisibility="Auto"
                          MaxHeight="380">

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="Margin" Value="0,5"/>
                            <Setter Property="Padding" Value="10"/>
                            <Setter Property="Background" Value="#222"/>
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="Cursor" Value="Arrow"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListViewItem">
                                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="8">
                                            <ContentPresenter/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#2E2E2E"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- 🍔 Ảnh món -->
                                <Border Width="60" Height="60" CornerRadius="8" Margin="0,0,10,0" ClipToBounds="True">
                                    <Image Source="{Binding ImageUrl}"
                                           Stretch="UniformToFill"
                                           Width="60" Height="60"
                                           VerticalAlignment="Center"
                                           HorizontalAlignment="Center"/>
                                </Border>

                                <!-- 📝 Tên & số lượng -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="Bold"
                                               FontSize="15"
                                               Foreground="White"/>
                                    <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                        <Button Content="−"
                                                Command="{Binding DataContext.DecreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Width="26" Height="26"
                                                FontWeight="Bold"
                                                Background="#333"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"/>
                                        <TextBlock Text="{Binding Quantity}"
                                                   Width="32"
                                                   TextAlignment="Center"
                                                   VerticalAlignment="Center"
                                                   FontWeight="Bold"
                                                   Foreground="#FF7A00"
                                                   Margin="6,0"/>
                                        <Button Content="+"
                                                Command="{Binding DataContext.IncreaseQuantityCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                CommandParameter="{Binding}"
                                                Width="26" Height="26"
                                                FontWeight="Bold"
                                                Background="#333"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Cursor="Hand"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- 💰 Giá + Xóa -->
                                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Total, StringFormat={}{0:N0}₫}"
                                               Foreground="#FF7A00"
                                               FontSize="15"
                                               FontWeight="Bold"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>
                                    <Button Content="🗑"
                                            Command="{Binding DataContext.RemoveItemCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                            CommandParameter="{Binding}"
                                            Background="Transparent"
                                            Foreground="#E53935"
                                            FontSize="14"
                                            BorderThickness="0"
                                            ToolTip="Xóa món"
                                            Cursor="Hand"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </Border>

            <!-- 💵 Tổng cộng + Nút -->
            <StackPanel Grid.Row="2" Margin="0,25,0,0">
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right"
                            Margin="0,0,0,12">
                    <TextBlock Text="Tổng cộng:"
                               FontSize="16"
                               Foreground="#CCC"
                               VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding TotalPrice, StringFormat={}{0:N0} VND}"
                               FontSize="18"
                               FontWeight="Bold"
                               Foreground="#FF7A00"
                               Margin="8,0,0,0"
                               VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Đóng"
                            Width="90" Height="38"
                            FontWeight="Bold"
                            Cursor="Hand"
                            Margin="0,0,10,0"
                            Foreground="White"
                            Background="#333"
                            BorderThickness="0"
                            Click="Close_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button Content="Đặt món"
                            Width="120" Height="38"
                            FontWeight="Bold"
                            Foreground="White"
                            Cursor="Hand"
                            Background="#FF7A00"
                            BorderThickness="0"
                            Click="Order_Click">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>
