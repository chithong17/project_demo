<Window x:Class="RestaurantWPF.Views.Customer.Dialogs.EditReservationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Chỉnh sửa đặt bàn"
        WindowStartupLocation="CenterScreen"
        SizeToContent="WidthAndHeight"
        ResizeMode="NoResize"
        Background="#121212"
        WindowStyle="ToolWindow"
        FontFamily="Segoe UI">

    <Window.Resources>
        <!-- 🌙 Shadow -->
        <DropShadowEffect x:Key="CardShadow"
                          BlurRadius="20"
                          ShadowDepth="2"
                          Opacity="0.25"
                          Color="Black"/>

        <!-- 🎨 Nút hành động -->
        <Style x:Key="DialogButtonStyle" TargetType="Button">
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Width" Value="110"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF7A00"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E66B00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ❌ Nút hủy -->
        <Style x:Key="CancelButtonStyle" BasedOn="{StaticResource DialogButtonStyle}" TargetType="Button">
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="Foreground" Value="#CCCCCC"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A3A"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 🧾 TextBox -->
        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Margin" Value="15,0,0,15"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#FF7A00"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#FF7A00" BlurRadius="10" ShadowDepth="0" Opacity="0.4"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 📅 DatePicker -->
        <Style TargetType="DatePicker">
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#3A3A3A"/>
            <Setter Property="BorderThickness" Value="1.2"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="4,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="BorderBrush" Value="#FF7A00"/>
                </Trigger>
                <Trigger Property="IsKeyboardFocusWithin" Value="True">
                    <Setter Property="BorderBrush" Value="#FF7A00"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- ✨ DatePicker nội bộ: sửa lỗi che ngày -->
        <Style TargetType="DatePickerTextBox">
            <Setter Property="Background" Value="#242424"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="DatePickerTextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderThickness="0" 
                                CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost" Focusable="False" Margin="0"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12"
            BorderBrush="#2A2A2A"
            BorderThickness="1"
            Padding="30"
            Background="#1E1E1E"
            Effect="{StaticResource CardShadow}">

        <StackPanel>
            <!-- 🌟 Tiêu đề -->
            <TextBlock Text="✏️ Cập nhật thông tin đặt bàn"
                       FontSize="22"
                       FontWeight="Bold"
                       Foreground="#FF7A00"
                       Margin="0,0,0,25"/>

            <!-- 🕒 Thời gian -->
            <TextBlock Text="🕒 Thời gian đặt:"
                       Margin="0,0,0,6"
                       Foreground="#CCCCCC"
                       FontWeight="SemiBold"/>
            <StackPanel Orientation="Horizontal" Margin="15,0,0,15">
                <DatePicker SelectedDate="{Binding StartTime}"/>
                <TextBlock Text="Giờ:" VerticalAlignment="Center"
                           Margin="10,0,6,0"
                           Foreground="#BFBFBF"/>
                <TextBox Text="{Binding TimeString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                         Width="90"
                         ToolTip="Nhập giờ dạng HH:mm (VD: 18:30)"
                         HorizontalAlignment="Left"
                         HorizontalContentAlignment="Left"
                         VerticalContentAlignment="Center"/>
            </StackPanel>

            <!-- 👥 Số người -->
            <TextBlock Text="👥 Số lượng khách:"
                       Margin="0,0,0,6"
                       Foreground="#CCCCCC"
                       FontWeight="SemiBold"/>
            <TextBox Text="{Binding NumberOfPeople, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     Width="100"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"/>

            <!-- 📞 Số điện thoại -->
            <TextBlock Text="📞 Số điện thoại:"
                       Margin="0,10,0,6"
                       Foreground="#CCCCCC"
                       FontWeight="SemiBold"/>
            <TextBox Text="{Binding Phone}"
                     Width="200"
                     IsReadOnly="True"
                     Foreground="#FF7A00"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Center"/>

            <!-- 📝 Ghi chú -->
            <TextBlock Text="📝 Ghi chú thêm:"
                       Margin="0,15,0,6"
                       Foreground="#CCCCCC"
                       FontWeight="SemiBold"/>
            <TextBox Text="{Binding Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                     AcceptsReturn="True"
                     Height="80"
                     Width="320"
                     TextWrapping="Wrap"
                     HorizontalAlignment="Left"
                     HorizontalContentAlignment="Left"
                     VerticalContentAlignment="Top"/>

            <!-- ⚠️ Gợi ý -->
            <TextBlock Text="⚠️ Bạn chỉ có thể chỉnh sửa đặt bàn trước 30 phút so với giờ hẹn."
                       FontSize="12"
                       Foreground="#888"
                       Margin="15,10,0,25"
                       TextWrapping="Wrap"/>

            <!-- 🔘 Nút hành động -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="❌ Hủy"
                        Style="{StaticResource CancelButtonStyle}"
                        Command="{Binding CancelCommand}"/>
                <Button Content="💾 Lưu"
                        Style="{StaticResource DialogButtonStyle}"
                        Command="{Binding SaveCommand}"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>
